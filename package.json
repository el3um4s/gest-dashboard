{
  "name": "gest-dashboard",
  "productName": "gest-dashboard",
  "description": "A desktop app to serve a local folder of files in your PC without having to run a server",
  "author": "Samuele de Tomasi <samuele@stranianelli.com>",
  "license": "MIT",
  "version": "0.1.220817",
  "main": "dist/index.js",
  "scripts": {
    "nodemon": "nodemon",
    "dev": "rollup -c -w",
    "start": "npm run compile && electron .",
    "electron-trace": "electron --trace-warnings .",
    "start:svelte": "rollup -c & npm run compile && electron .",
    "compile": "tsc",
    "rebuild-sqlite3": "electron-rebuild -f -w sqlite3",
    "out:win": "rollup -c && tsc && electron-builder build --win --publish never",
    "out:linux": "rollup -c && tsc && electron-builder build --linux --publish never",
    "publish:linux": "rollup -c && tsc && electron-builder build --linux --publish always",
    "publish:win": "rollup -c && tsc && electron-builder build --win --publish always",
    "check-updates": "npx npm-check-updates",
    "check-updates:minor": "npx npm-check-updates --target minor",
    "check-updates:patch": "npx npm-check-updates --target patch"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^22.0.2",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-typescript": "^8.3.4",
    "@tsconfig/svelte": "^3.0.0",
    "@types/file-saver": "^2.0.5",
    "@types/marked": "^4.0.6",
    "@types/sqlite3": "^3.1.8",
    "@types/wicg-file-system-access": "^2020.9.5",
    "autoprefixer": "^10.4.8",
    "electron": "^20.0.3",
    "electron-builder": "^23.3.3",
    "electron-rebuild": "^3.2.9",
    "nodemon": "^2.0.19",
    "postcss": "^8.4.16",
    "postcss-load-config": "^4.0.1",
    "rollup": "^2.78.1",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "semver": "^7.3.7",
    "svelte": "^3.49.0",
    "svelte-check": "^2.8.1",
    "svelte-preprocess": "^4.10.7",
    "tailwindcss": "^3.1.8",
    "tslib": "^2.4.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@el3um4s/ipc-for-electron": "^1.0.4",
    "@el3um4s/ipc-for-electron-auto-updater": "^0.0.5",
    "@el3um4s/ipc-for-electron-chokidar": "^1.0.0",
    "@el3um4s/ipc-for-electron-system-info": "^2.0.2",
    "@el3um4s/ipc-for-electron-window-controls": "^1.0.2",
    "@el3um4s/match": "^0.0.5",
    "@el3um4s/node-adodb": "^5.0.17",
    "@el3um4s/renderer-for-electron-auto-updater": "^0.0.4",
    "@el3um4s/renderer-for-electron-chokidar": "^1.0.0",
    "@el3um4s/renderer-for-electron-system-info": "^2.0.0",
    "@el3um4s/renderer-for-electron-window-controls": "^1.0.0",
    "@el3um4s/svelte-titlebar": "^0.1.0",
    "@el3um4s/to-try": "^0.0.8",
    "@fortawesome/free-regular-svg-icons": "^6.1.2",
    "@fortawesome/free-solid-svg-icons": "^6.1.2",
    "ansi-regex": "^6.0.1",
    "blob-polyfill": "^7.0.20220408",
    "electron-reload": "^2.0.0-alpha.1",
    "file-saver": "^2.0.5",
    "idb-keyval": "^6.2.0",
    "marked": "^4.0.19",
    "sirv-cli": "^2.0.2",
    "sqlite3": "^5.0.11",
    "svelte-fa": "^3.0.3"
  },
  "build": {
    "appId": "gest-dashboard",
    "directories": {
      "output": "out"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "el3um4s",
        "repo": "gest-dashboard"
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "icon.ico"
    },
    "linux": {
      "icon": "icon.png",
      "target": [
        "deb",
        "AppImage",
        "rpm",
        "tar.xz",
        "pacman"
      ],
      "category": "productivity"
    },
    "nsis": {
      "installerIcon": "icon.ico",
      "uninstallerIcon": "icon.ico",
      "uninstallDisplayName": "Gest DashBoard",
      "license": "license.txt",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "extraResources": [
      {
        "from": "./node_modules/@el3um4s/node-adodb/lib/adodb.js",
        "to": "adodb.js"
      }
    ]
  }
}
