{
  "name": "gest-dashboard",
  "productName": "gest-dashboard",
  "description": "A desktop app to serve a local folder of files in your PC without having to run a server",
  "author": "Samuele de Tomasi <samuele@stranianelli.com>",
  "license": "MIT",
  "version": "0.1.220602",
  "main": "dist/index.js",
  "scripts": {
    "nodemon": "nodemon",
    "dev": "rollup -c -w",
    "start": "npm run compile && electron .",
    "electron-trace": "electron --trace-warnings .",
    "start:svelte": "rollup -c & npm run compile && electron .",
    "compile": "tsc",
    "rebuild-sqlite3": "electron-rebuild -f -w sqlite3",
    "out:win": "rollup -c && tsc && electron-builder build --win --publish never",
    "publish:win": "rollup -c && tsc && electron-builder build --win --publish always",
    "check-updates": "npx npm-check-updates",
    "check-updates:minor": "npx npm-check-updates --target minor",
    "check-updates:patch": "npx npm-check-updates --target patch"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^22.0.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-typescript": "^8.3.3",
    "@tsconfig/svelte": "^3.0.0",
    "@types/file-saver": "^2.0.5",
    "@types/sqlite3": "^3.1.8",
    "@types/wicg-file-system-access": "^2020.9.5",
    "autoprefixer": "^10.4.7",
    "electron": "^19.0.4",
    "electron-builder": "^23.0.3",
    "electron-rebuild": "^3.2.7",
    "nodemon": "^2.0.16",
    "postcss": "^8.4.14",
    "postcss-load-config": "^4.0.1",
    "rollup": "^2.75.6",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "semver": "^7.3.7",
    "svelte": "^3.48.0",
    "svelte-check": "^2.7.2",
    "svelte-preprocess": "^4.10.7",
    "tailwindcss": "^3.1.3",
    "tslib": "^2.4.0",
    "typescript": "^4.7.3"
  },
  "dependencies": {
    "@el3um4s/node-adodb": "^5.0.11",
    "@el3um4s/svelte-titlebar": "^0.0.11",
    "@el3um4s/to-try": "^0.0.5",
    "@fortawesome/free-regular-svg-icons": "^6.1.1",
    "@fortawesome/free-solid-svg-icons": "^6.1.1",
    "ansi-regex": "^6.0.1",
    "blob-polyfill": "^7.0.20220408",
    "electron-reload": "^2.0.0-alpha.1",
    "electron-updater": "^5.0.1",
    "file-saver": "^2.0.5",
    "idb-keyval": "^6.1.0",
    "native-file-system-adapter": "^2.0.4",
    "sirv-cli": "^2.0.2",
    "sqlite3": "^5.0.8",
    "svelte-fa": "^3.0.2"
  },
  "build": {
    "appId": "gest-dashboard",
    "directories": {
      "output": "out"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "el3um4s",
        "repo": "gest-dashboard"
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "snap"
      ],
      "category": "productivity"
    },
    "nsis": {
      "installerIcon": "icon.ico",
      "uninstallerIcon": "icon.ico",
      "uninstallDisplayName": "Gest DashBoard",
      "license": "license.txt",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "extraResources": [
      {
        "from": "./node_modules/@el3um4s/node-adodb/lib/adodb.js",
        "to": "adodb.js"
      }
    ]
  }
}
